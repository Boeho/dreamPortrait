<div class="reviewsContent">
    <div class="reviewsHeader" style="text-align: center">
        HERE YOU CAN READ SOME REVIEWS FORM OUR CUSTOMER
    </div>
    <hr style="width: 70%; margin: 25px auto;">

    <div class="reviews">
        <div class="reviewsAdmin">
            {{#each products}}
                <div class="card" style="max-width: 340px; padding: 10px">
                    <img src="{{artImage}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{firstName}} {{lastName}}</h5>
                        <p class="card-text">{{comment.comment}}</p>
                    </div>
                    <div>
                        <div>
                            {{#each comment.rating}}
                                {{# if this }}
                                    <img class="star-rating" src="/images/filled_star.png" alt="">
                                {{else}}
                                    <img class="star-rating" src="/images/empty_star.png" alt="">
                                {{/ if }}
                            {{/each}}
                        </div>
                    </div>
<!--                    <button class="dell-review-btn">Dell</button>-->
                </div>
            {{/each}}
        </div>
    </div>
</div>
</div>

<script>
    (() => {
        // Page is loaded
        const objects = document.getElementsByClassName('main-img');
        Array.from(objects).map((item) => {
            // Start loading image
            const img = new Image();
            img.src = item.dataset.src;

            // Once image is loaded replace the src of the HTML element
            img.onload = () => {
                // item.classList.remove('img_home');
                return item.nodeName === 'IMG' ?
                        item.src = item.dataset.src :
                        item.style.backgroundImage = `url(${item.dataset.src})`;
            };
        });
    })();
</script>


