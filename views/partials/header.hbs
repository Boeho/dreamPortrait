<div class="header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <button class="burger" type="button" id="navToggle" onclick="myFunction()"><span class="brgSpan"></span></button>
            </div>
            <div class="col text-center">
                <a href="/home-page" class="home-page-link">
                    <img class="logot" src="/images/logo.png">
                </a>
            </div>
            <div class="col text-right">
                <a class="navlink" id="navlinkCart" href="/cart-page/{{this._id}}">
                    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16"
                         class="bi bi-cart4" fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
                        <span id="qtyCart" class="badge badge-light">0</span>
                    </svg>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col pt-3">
                <div class="navLinks text-center" id="navLinks">
                    <a class="navlink" href="/home-page">HOME</a>
                    <a class="navlink" href="/order-page">GET MY CARTOON</a>
                    <a class="navlink" href="/reviews-page">REVIEWS</a>
                    <a class="navlink" href="/f-a-q">F.A.Q.</a>
                    <a class="navlink" href="/contact-us">CONTACT US</a>
                </div>
            </div>
        </div>
    </div>

    <div>
        <!-- unused, do we need this? -->
        {{# if login }}
            <a class="navlink userSign" id="navlink" href="/user/profile/"
               data-scroll="#USER"><i class="fas fa-user"
                                      style="font-size: 30px"></i></a>

            <a class="navlink userWord" id="navlinkUser" href="/user/profile/"
               data-scroll="#USER">USER</a>
        {{ else }}
            <!--            <a class="navlink" id="navlinkSignIn" href="/user/signin/" data-scroll="#SIGN IN">SIGN IN</a>-->
        {{/if}}
    </div>
</div>

<script>
navv = document.getElementById("navLinks");
navvv = document.getElementById("navlinkSignIn");

function myFunction() {
    navv.style.display = navv.style.display == 'flex' ? 'none' : 'flex';
    navvv.style.display = navvv.style.display == 'flex' ? 'none' : 'flex';
}



function updateCartQty () {
    var localStorageCart = JSON.parse(localStorage.getItem("cart"));
    document.getElementById('qtyCart').innerHTML = localStorageCart ? localStorageCart.length : 0;
}

updateCartQty ();

</script>
