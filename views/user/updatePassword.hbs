<div class="signIn">
    <div class="signInContent">
        <div class="signIn">Update password</div>
        <hr>
        <div class="welcomeBack">Welcome back!</div>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages}}
                    <p>{{ this }}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/update-password" method="post">
            <div class="form-group">
                <input type="password" id="password" name="password" class="form-control" placeholder="password">
            </div>
            <div class="form-group">
                <input type="password" id="confirm_password" name="confirm_password" class="form-control" placeholder="confirm password">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <input type="hidden" name="reset_link" value="{{ resetLink }}">
                <button class="signInBtn">CHANGE</button>
            </div>
        </form>
    </div>
</div>
